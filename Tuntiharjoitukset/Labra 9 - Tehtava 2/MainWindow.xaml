        <Button x:Name="button" Content="-->" HorizontalAlignment="Left" Margin="216,124,0,0" VerticalAlignment="Top" Width="45" Height="38" Click="button_Click"/>
        <Button x:Name="button_Copy" Content="-->" HorizontalAlignment="Left" Margin="216,201,0,0" VerticalAlignment="Top" Width="45" Height="38" Click="button_Copy_Click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="47" Margin="87,32,0,0" TextWrapping="Wrap" FontSize="25" Text="EURO / MARKKAMUUNNIN" VerticalAlignment="Top" Width="352"/>
    </Grid>
</Window>
