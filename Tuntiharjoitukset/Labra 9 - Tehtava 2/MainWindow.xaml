        <TextBlock x:Name="muunnettuMarkka" HorizontalAlignment="Left" Margin="289,124,0,0" TextWrapping="Wrap" FontSize="25" Text="x" VerticalAlignment="Top"/>
        <TextBlock x:Name="muunnettuEuro" HorizontalAlignment="Left" Margin="289,201,0,0" TextWrapping="Wrap" FontSize="25" Text="x" VerticalAlignment="Top"/>
