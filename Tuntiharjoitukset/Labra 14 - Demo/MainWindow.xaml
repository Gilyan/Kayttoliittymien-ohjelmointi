<Window x:Class="Labra_14___Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labra_14___Demo"
        mc:Ignorable="d"
        Title="Demo" Height="350" Width="525">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFB92323" Offset="0"/>
                <GradientStop Color="#FFE6BCBC" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel>
            <Button x:Name="btnWork" Content="Do Long Work" Width="100" Margin="10,10,0,0" HorizontalAlignment="Left" Click="btnWork_Click"/>
            <Button x:Name="btnFire" Content="Fire!" Width="100" Margin="10,10,0,0" HorizontalAlignment="Left" Click="btnFire_Click"/>
            <TextBox x:Name="txtMessage" Text="[message comes here]" Margin="10,10,0,0" Width="auto" Height="20" HorizontalAlignment="Left"/>
        </StackPanel>

    </Grid>
</Window>
